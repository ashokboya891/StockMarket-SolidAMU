@model LoginDTO
@{
    ViewBag.Title = "Login-Page";
}
@* <h3>Login-page</h3> *@

<style>
    html, body, label {
      font-family: 'Roboto', sans-serif;
    }
</style>
<div class="min-h-screen py-40" style="background-image: linear-gradient(115deg, #9F7AEA, #FEE2FE)">
    <div class="container mx-auto">
        <!-- wrapper  -->
        <div class="flex flex-col lg:flex-row w-10/12 lg:w-8/12 bg-white rounded-xl mx-auto shadow-lg overflow-hidden">
            <!-- left  -->
            <!-- right  -->
            <div class="w-full lg:w-1/2 py-16 px-12">
                <h2 class="text-3xl mb-4">Login</h2>
                <p class="mb-4">Create your account. It’s free and only take a minute </p>
                <p class="mb-4">if already register click here to  <a asp-action="Register" asp-controller="Account">Register</a> </p>

                <form asp-action="Login" method="post" asp-controller="Account">
                  

                

                    <div class="mt-5">
                        <label id="Email">Email</label>
                        <input asp-for="Email" placeholder="Email" class="border border-gray-400 py-1 px-2 w-full">
                        <span asp-validation-for="Email" style="color:red"></span>
                    </div>
                 
                    <div class="mt-5">
                        <label id="Password">Password</label>
                        <input asp-for="Password" placeholder="Password" class="border border-gray-400 py-1 px-2 w-full">
                        <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                 
                    @*   <div class="mt-5">
                    <input type="checkbox" class="border border-gray-400">
                    <span>
                    I accept the <a href="#" class="text-purple-500 font-semibold">Terms of Use</a> & <a href="#" class="text-purple-500 font-semibold">Privacy Policy</a>
                    </span>
                    </div> *@
                    <div class="mt-5">
                        <button type="submit" class="bg-purple-500 w-full text-center text-white py-3">Login Now</button>
                    </div>
                    <div asp-validation-summary="All" style="color:red">
                    </div>
                    @if (ViewBag.Errors != null)
                    {
                        @foreach (string error in ViewBag.Errors)
                        {
                            <h4>@error</h4>
                        }
                    }
                </form>
            </div>



        </div>
    </div>




</div>

